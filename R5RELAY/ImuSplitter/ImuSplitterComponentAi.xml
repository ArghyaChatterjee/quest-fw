<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../Autocoders/schema/ISF/component_schema.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>

<component name="ImuSplitter" kind="passive" namespace="R5RELAY" modeler="true">

    <import_port_type>ROS/Gen/sensor_msgs/Ports/ImuNoCovPortAi.xml</import_port_type>
    <import_port_type>ROS/Gen/geometry_msgs/Ports/QuaternionPortAi.xml</import_port_type>
    <import_port_type>ROS/Gen/geometry_msgs/Ports/Vector3PortAi.xml</import_port_type>
    <import_port_type>Fw/Time/TimePortAi.xml</import_port_type>

    <ports>

        <port name="IMU" data_type="ImuNoCov"  kind="sync_input"    max_number="1">
        </port>

    </ports>

    <telemetry>
        <channel id="0" name="ImuSeq" data_type="U32"/>
        <channel id="1" name="ImuStampSec" data_type="U32"/>
        <channel id="2" name="ImuStampUSec" data_type="U32"/>
        <channel id="3" name="ImuFrame" data_type="U32"/>
        <channel id="4" name="ImuOrientation" data_type="ROS::geometry_msgs::Quaternion"/>
        <channel id="5" name="ImuAngularVelocity" data_type="ROS::geometry_msgs::Vector3"/>
        <channel id="6" name="ImuLinearAcceleration" data_type="ROS::geometry_msgs::Vector3"/>
    </telemetry>

</component>
