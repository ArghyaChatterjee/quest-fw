        <port name="Image" data_type="ROS::sensor_msgs::Image"  kind="async_input"    max_number="1">
        </port>

        <port name="sched" data_type="Svc::Sched"  kind="async_input"    max_number="1">
        </port>

        <port name="pingOut" data_type="Svc::Ping"  kind="output"    max_number="1">
        </port>

        <port name="Odometry" data_type="ROS::nav_msgs::OdometryNoCov"  kind="output"    max_number="1">
        </port>

        <port name="ImuStateUpdate" data_type="ROS::mav_msgs::ImuStateUpdateNoCov"  kind="output"  max_number="1">
